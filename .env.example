# InkSoul 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# ===========================================
# 数据库配置
# ===========================================
POSTGRES_DB=inksoul
POSTGRES_USER=inksoul
POSTGRES_PASSWORD=inksoul123
POSTGRES_URL=jdbc:postgresql://localhost:5432/inksoul

# ===========================================
# Redis配置
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ===========================================
# Elasticsearch配置
# ===========================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# ===========================================
# JWT配置
# ===========================================
JWT_SECRET=InkSoulSecretKeyForJWTTokenGeneration2024
JWT_EXPIRATION=86400000

# ===========================================
# AI服务配置
# ===========================================
# OpenAI API配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Azure Speech Services配置
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=eastus

# ===========================================
# 应用配置
# ===========================================
APP_NAME=InkSoul
APP_VERSION=1.0.0
APP_ENV=development

# 后端服务配置
BACKEND_PORT=8080
BACKEND_HOST=localhost

# 前端配置
FRONTEND_PORT=3000
API_BASE_URL=http://localhost:8080/api

# ===========================================
# 文件存储配置
# ===========================================
# 本地文件存储路径
FILE_STORAGE_PATH=./uploads
MAX_FILE_SIZE=50MB

# 云存储配置 (可选)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=inksoul-files
# AWS_S3_REGION=us-east-1

# ===========================================
# 邮件服务配置 (可选)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@inksoul.app

# ===========================================
# 监控和日志配置
# ===========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/inksoul.log

# Prometheus监控 (可选)
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090

# ===========================================
# 安全配置
# ===========================================
# CORS允许的域名
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# 是否启用HTTPS
HTTPS_ENABLED=false
# SSL证书路径 (如果启用HTTPS)
# SSL_KEYSTORE_PATH=classpath:keystore.p12
# SSL_KEYSTORE_PASSWORD=your-keystore-password

# ===========================================
# 开发环境配置
# ===========================================
# 是否启用开发模式
DEV_MODE=true

# 是否启用SQL日志
SHOW_SQL=false

# 是否启用Swagger文档
SWAGGER_ENABLED=true

# ===========================================
# 生产环境配置
# ===========================================
# 数据库连接池配置
DB_POOL_MAX_SIZE=20
DB_POOL_MIN_IDLE=5

# Redis连接池配置
REDIS_POOL_MAX_ACTIVE=8
REDIS_POOL_MAX_IDLE=8

# JVM内存配置
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC