# Debug环境专用环境变量配置
# 用于本地调试开发

# ===========================================
# 应用基本配置
# ===========================================
APP_NAME=InkSoul
APP_VERSION=1.0.0-DEBUG
APP_ENV=debug
SPRING_PROFILES_ACTIVE=debug

# ===========================================
# 数据库配置 - Debug
# ===========================================
POSTGRES_DB=inksoul_debug
POSTGRES_USER=inksoul
POSTGRES_PASSWORD=inksoul123
POSTGRES_URL=jdbc:postgresql://localhost:5433/inksoul_debug
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# ===========================================
# Redis配置 - Debug
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=

# ===========================================
# Elasticsearch配置 - Debug
# ===========================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9201

# ===========================================
# 服务端口配置 - Debug
# ===========================================
BACKEND_PORT=8081
BACKEND_HOST=localhost
FRONTEND_PORT=3000
API_BASE_URL=http://localhost:8081/api

# 调试端口
JAVA_DEBUG_PORT=5005
LIVERELOAD_PORT=35729

# ===========================================
# JWT配置 - Debug
# ===========================================
JWT_SECRET=InkSoulDebugSecretKeyForJWTTokenGeneration2024Debug
JWT_EXPIRATION=86400000

# ===========================================
# AI服务配置 - Debug
# ===========================================
# OpenAI API配置（调试时可以使用模拟模式）
OPENAI_API_KEY=debug-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
AI_MOCK_ENABLED=true

# Azure Speech Services配置
AZURE_SPEECH_KEY=debug-key
AZURE_SPEECH_REGION=eastus

# ===========================================
# 文件存储配置 - Debug
# ===========================================
FILE_STORAGE_PATH=./debug-uploads
MAX_FILE_SIZE=10MB

# ===========================================
# 日志配置 - Debug
# ===========================================
LOG_LEVEL=DEBUG
LOG_FILE_PATH=./logs/inksoul-debug.log
LOG_SQL=true
LOG_REQUESTS=true
LOG_RESPONSES=true

# ===========================================
# 调试工具配置
# ===========================================
# 数据库管理工具
ADMINER_PORT=8082
ADMINER_USER=admin
ADMINER_PASSWORD=debug123

# Redis管理工具
REDIS_COMMANDER_PORT=8083
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=debug123

# Elasticsearch管理工具
ES_HEAD_PORT=9100

# ===========================================
# 监控配置 - Debug
# ===========================================
# Prometheus
PROMETHEUS_PORT=9091
PROMETHEUS_ENABLED=true

# Grafana
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=debug123

# Jaeger追踪
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268
JAEGER_ENABLED=true

# ===========================================
# 开发工具配置
# ===========================================
# 是否启用开发工具
DEVTOOLS_ENABLED=true
DEVTOOLS_RESTART=true
DEVTOOLS_LIVERELOAD=true

# 是否启用热重载
HOT_RELOAD=true

# 是否显示SQL日志
SHOW_SQL=true
FORMAT_SQL=true

# 是否启用Swagger文档
SWAGGER_ENABLED=true
SWAGGER_PATH=/swagger-ui.html

# 是否启用Actuator端点
ACTUATOR_ENABLED=true
ACTUATOR_ENDPOINTS=*

# ===========================================
# 安全配置 - Debug
# ===========================================
# CORS配置（调试模式下允许所有来源）
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=*
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# 是否启用HTTPS
HTTPS_ENABLED=false

# ===========================================
# JVM配置 - Debug
# ===========================================
JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005

# ===========================================
# Docker配置 - Debug
# ===========================================
DOCKER_REGISTRY=inksoul
IMAGE_TAG=debug
COMPOSE_PROJECT_NAME=inksoul-debug

# ===========================================
# 测试配置
# ===========================================
# 是否启用测试数据
TEST_DATA_ENABLED=true
TEST_USER_EMAIL=debug@inksoul.app
TEST_USER_PASSWORD=debug123

# ===========================================
# 性能配置 - Debug
# ===========================================
# 数据库连接池配置（调试时使用较小的连接池）
DB_POOL_MAX_SIZE=5
DB_POOL_MIN_IDLE=2
DB_POOL_CONNECTION_TIMEOUT=30000

# Redis连接池配置
REDIS_POOL_MAX_ACTIVE=4
REDIS_POOL_MAX_IDLE=4
REDIS_POOL_MIN_IDLE=1

# ===========================================
# 邮件服务配置 - Debug（可选）
# ===========================================
# 使用MailHog进行邮件调试
MAILHOG_ENABLED=true
MAILHOG_PORT=8025
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=debug@inksoul.app